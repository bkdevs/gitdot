{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "x-tombi-toml-version": "v1.0.0",
  "title": "Gitdot CI Configuration",
  "description": "Configuration schema for gitdot.toml CI/CD pipelines",
  "type": "object",
  "additionalProperties": false,
  "required": ["builds", "tasks"],
  "properties": {
    "builds": {
      "type": "array",
      "description": "Build triggers — TOML [[builds]] array of tables",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["trigger", "tasks"],
        "properties": {
          "trigger": {
            "type": "string",
            "description": "Event that triggers this build",
            "enum": ["pull_request", "push_to_main"]
          },
          "tasks": {
            "type": "array",
            "description": "Names of tasks to run for this trigger",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },
    "tasks": {
      "type": "array",
      "description": "Task definitions — TOML [[tasks]] array of tables",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "command"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique task identifier referenced by build configs"
          },
          "command": {
            "type": "string",
            "description": "Shell command to execute"
          },
          "waits_for": {
            "type": "array",
            "description": "Task names that must complete before this task runs",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
